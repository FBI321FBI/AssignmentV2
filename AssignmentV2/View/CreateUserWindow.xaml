<Window x:Class="AssignmentV2.View.CreateUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AssignmentV2.View"
        mc:Ignorable="d"
        Title="CreateUserWindow" Height="250" Width="450" Background="{StaticResource DefaultBackGround}">
    <Grid>
		<StackPanel Margin="5">
			<TextBox x:Name="FioTextBox" Style="{StaticResource DefaultTextBoxWithTagStyle}" Tag="Фио"/>
			<TextBox x:Name="LoginTextBox" Style="{StaticResource DefaultTextBoxWithTagStyle}" Tag="Логин"/>
			<TextBox x:Name="PasswordTextBox" Style="{StaticResource DefaultTextBoxWithTagStyle}" Tag="Пароль"/>
			<CheckBox x:Name="CreateProjectsCheckBox" Content="Создание проектов" Foreground="White" Margin="3"/>
			<CheckBox x:Name="CreateTasksCheckBox" Content="Создание задача" Foreground="White" Margin="3"/>
			<CheckBox x:Name="AdminCheckBox" Content="Администратор" Foreground="White" Margin="3"/>
			<StackPanel Orientation="Horizontal">
				<Button x:Name="CreteUserButton" Content="Создать" Style="{StaticResource DefaultButtonStyle}" FontSize="15" Click="CreteUserButton_Click"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>
