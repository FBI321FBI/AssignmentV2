<UserControl x:Class="AssignmentV2.View.Utilites.InformationTextBoxUserControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:AssignmentV2.View.Utilites"
			 mc:Ignorable="d">
	<Grid>

		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		
		<StackPanel Orientation="Horizontal" MaxHeight="30" VerticalAlignment="Top">
			<Button MinWidth="150" Style="{StaticResource DefaultButtonStyle}">
				<Button.Content>
					<Label Content="Модератор" Foreground="{StaticResource DefaultButtonTextForeground}"/>
				</Button.Content>
			</Button>
			<Button Style="{StaticResource DefaultButtonStyle}">
				<Button.Content>
					<Label Content="🛈" Foreground="{StaticResource DefaultButtonTextForeground}"/>
				</Button.Content>
			</Button>
		</StackPanel>

		<Label Grid.RowSpan="2" MaxWidth="100" Grid.Column="1" Margin="5,0,0,0" Style="{StaticResource LabelDefaultStyle}">
			<TextBlock TextWrapping="Wrap" Text="Модератор занимается проверкой пользователя."/>
		</Label>
	</Grid>
</UserControl>
