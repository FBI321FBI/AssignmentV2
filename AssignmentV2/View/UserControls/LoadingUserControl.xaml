<UserControl x:Class="AssignmentV2.View.UserControls.LoadingUserControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:AssignmentV2.View.UserControls"
			 mc:Ignorable="d" 
			 d:DesignHeight="450" d:DesignWidth="800"
			 x:Name="CurrentUserControl">
	<Grid>
		<Rectangle Fill="Black" Opacity="0.3"/>
		<Border Style="{StaticResource DefaultBorderStyle}" Width="150" Height="5" Background="Transparent">
			<Rectangle x:Name="LoadingRectangle" Fill="{StaticResource DefaultBackGround}" Height="25" HorizontalAlignment="Left"/>
		</Border>
	</Grid>
</UserControl>
