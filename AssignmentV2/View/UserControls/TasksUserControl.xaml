<UserControl x:Class="AssignmentV2.View.UserControls.TasksUserControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:AssignmentV2.View.UserControls"
			 mc:Ignorable="d" 
			 d:DesignHeight="1080" d:DesignWidth="1920">
	<Grid>
		<ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
			<StackPanel x:Name="MainTasksStackPanel" Margin="10" Orientation="Vertical">
				<StackPanel x:Name="TasksStackPanel" Orientation="Horizontal">
					<Button x:Name="AddTaskButton" Width="310" Height="150" Style="{StaticResource DefaultButtonStyle}" Content="+" FontSize="25" HorizontalAlignment="Center" Margin="3" Click="AddTaskButton_Click"/>
				</StackPanel>
			</StackPanel>
		</ScrollViewer>
	</Grid>
</UserControl>
